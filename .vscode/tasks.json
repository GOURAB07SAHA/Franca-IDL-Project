{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Java Calculator",
            "type": "shell",
            "command": "javac",
            "args": [
                "-cp", ".",
                "org\\example\\calculator\\*.java"
            ],
            "options": {
                "cwd": "${workspaceFolder}/generated/java"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run Java Calculator",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp", ".",
                "org.example.calculator.CalculatorClient"
            ],
            "options": {
                "cwd": "${workspaceFolder}/generated/java"
            },
            "group": "test",
            "dependsOn": "Compile Java Calculator",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Run JavaScript Calculator",
            "type": "shell",
            "command": "node",
            "args": ["calculator-client.js"],
            "options": {
                "cwd": "${workspaceFolder}/generated/javascript"
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Generate Code from FRANCA IDL",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp", "${workspaceFolder}/tools",
                "EnhancedCodeGenerator"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Setup Java Package Structure",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "New-Item -ItemType Directory -Path '${workspaceFolder}/generated/java/org/example/calculator' -Force; Move-Item -Path '${workspaceFolder}/generated/java/*.java' -Destination '${workspaceFolder}/generated/java/org/example/calculator/' -Force -ErrorAction SilentlyContinue; Move-Item -Path '${workspaceFolder}/generated/java/*.class' -Destination '${workspaceFolder}/generated/java/org/example/calculator/' -Force -ErrorAction SilentlyContinue"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "dependsOn": "Generate Code from FRANCA IDL",
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "Full Code Generation & Setup",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Generate Code from FRANCA IDL",
                "Setup Java Package Structure"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Build C++ (CMake)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/generated/cpp"
            },
            "group": "build",
            "dependsOn": "Configure C++ (CMake)",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Configure C++ (CMake)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B", "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/generated/cpp"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Clean Generated Code",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Remove-Item -Path '${workspaceFolder}/generated/java/org/example/calculator/*.class' -Force -ErrorAction SilentlyContinue"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Compile Vehicle Dashboard",
            "type": "shell",
            "command": "javac",
            "args": [
                "-cp", ".",
                "org\\example\\automotive\\VehicleDashboard.java",
                "org\\example\\automotive\\VehicleDashboardImpl.java",
                "org\\example\\automotive\\VehicleDashboardApp.java"
            ],
            "options": {
                "cwd": "${workspaceFolder}/generated/java"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$javac"]
        },
        {
            "label": "Run Vehicle Dashboard",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp", ".",
                "org.example.automotive.VehicleDashboardApp"
            ],
            "options": {
                "cwd": "${workspaceFolder}/generated/java"
            },
            "group": "test",
            "dependsOn": "Compile Vehicle Dashboard",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Clean Vehicle Dashboard",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Remove-Item -Path '${workspaceFolder}/generated/java/org/example/automotive/*.class' -Force -ErrorAction SilentlyContinue"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Compile Common Service",
            "type": "shell",
            "command": "javac",
            "args": [
                "-cp", ".",
                "org\\example\\common\\CommonService.java",
                "org\\example\\common\\CommonServiceImpl.java",
                "org\\example\\common\\CommonServiceApp.java",
                "org\\example\\common\\CommonTypesImpl.java"
            ],
            "options": {
                "cwd": "${workspaceFolder}/generated/java"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$javac"]
        },
        {
            "label": "Run Common Service",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp", ".",
                "org.example.common.CommonServiceApp"
            ],
            "options": {
                "cwd": "${workspaceFolder}/generated/java"
            },
            "group": "test",
            "dependsOn": "Compile Common Service",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Compile All Interfaces",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Compile Java Calculator",
                "Compile Vehicle Dashboard",
                "Compile Common Service"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Run All Interfaces Demo",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Run Java Calculator",
                "Run Vehicle Dashboard",
                "Run Common Service"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Run All Tests",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-File", "${workspaceFolder}/run_all_tests.ps1"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}
